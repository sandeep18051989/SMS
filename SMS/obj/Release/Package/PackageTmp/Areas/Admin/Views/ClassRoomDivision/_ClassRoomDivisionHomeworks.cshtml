@model SMS.Models.ClassRoomDivisionModel
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body table-responsive">
            <table class="table table-bordered custom-table" style="width: 100% !important;" cellpadding="0" cellspacing="0" id="divisionhomeworks-grid">
                <thead class="mdb-color lighten-5">
                    <tr>
                        <th class="text-center">Homework</th>
                        <th class="text-center">Start Date</th>
                        <th class="text-center">End Date</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <script type="text/javascript">
                $(document).ready(function () {
                    // Initiallize Datatable
                    $('#divisionhomeworks-grid').DataTable({
                        "paging": false,
                        "bLengthChange": false, //thought this line could hide the LengthMenu
                        "bInfo": false,
                        "processing": true, // for show progress bar
                        "serverSide": true, // for process server side
                        "filter": false, // this is for disable filter (search box)
                        "orderMulti": true, // for disable multiple column at once
                        "ajax": {
                            "url": "/Admin/ClassRoomDivision/LoadHomeworkGrid/@(Model.Id)",
                            "type": "POST",
                            "datatype": "json"
                        },
                        "aaSorting": [],
                        "columns": [
                            {
                                "data": "Homework",
                                "title": "Homework",
                                "orderable": false,
                                "className": 'text-center',
                                "render": function (data, type, row) {
                                    if (type === "display") {
                                        var dateTemplate = row.Homework;
                                        return dateTemplate;
                                    }
                                    return data;
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "StartDate", "title": "Start Date", "name": "Start Date", "autoWidth": true, "defaultContent": "", "className": "text-center"
                            },
                            {
                                "data": "EndDate", "title": "End Date", "name": "End Date", "autoWidth": true, "defaultContent": "", "className": "text-center"
                            }],
                        "select": {
                            "style": 'os',
                            "selector": 'td:first-child'
                        }
                    });
                });
            </script>
        </div>
    </div>
</div>