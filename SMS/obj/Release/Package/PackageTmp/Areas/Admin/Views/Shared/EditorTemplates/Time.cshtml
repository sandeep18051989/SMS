@model DateTime?
@Html.TextBoxFor(model => model, new { @class = "form-control text-box single-line", @value = (Model.HasValue ? Model.Value.Year != 0001 ? Model.Value.ToString("hh:mm A") : "" : ""), @data_value = (Model.HasValue ? Model.Value.Year != 0001 ? Model.Value.ToString("hh:mm A") : "" : ""), @type="time", @autocomplete="off", @placeholder="", @pattern = "[0-9]{2}:[0-9]{2}" })
<script type="text/javascript">
    $(function () {
        $('input[type=time]').siblings('label').addClass('active');
    });
</script>