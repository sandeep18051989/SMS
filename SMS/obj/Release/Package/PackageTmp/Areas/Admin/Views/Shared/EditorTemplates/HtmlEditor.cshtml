@model String
@Html.TextAreaFor(model => model, new { @class = "Editor-editor", @style = "overflow:auto;", @contenteditable = "true", @placeholder = "Write your comment here" })
<script type="text/javascript">
    tinyMCE.init({
        selector: "#@(Html.IdFor(m => m))",
        mode: "textareas",
        theme: "silver",
        force_p_newlines: false,
        forced_root_block: '',
        plugins: ["placeholder", "code"]
    });
    tinymce.init({
        selector: "#tinymce-custom-placeholder",
        plugins: ["placeholder", "code"],
        placeholder: 'Write your text here'
    });
    tinymce.init({
        selector: "#tinymce-custom-style",
        plugins: ["placeholder"],
        placeholder_tag: 'div',
        placeholder_attrs: { style: { position: 'absolute', top: '5px', left: 0, color: '#FF0000', padding: '1%', width: '98%', overflow: 'hidden', 'white-space': 'pre-wrap' } },
    });
</script>