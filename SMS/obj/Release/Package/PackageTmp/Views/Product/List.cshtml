@model IEnumerable<SMS.Models.ProductModel>
@{
	ViewBag.Title = "Product List";
	Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#main-menu li").removeClass('active');
        $("#main-menu li:nth-child(2)").addClass('active');
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#list').click(function (event) { event.preventDefault(); $('#products .item').addClass('list-group-item'); });
        $('#grid').click(function (event) { event.preventDefault(); $('#products .item').removeClass('list-group-item'); $('#products .item').addClass('grid-group-item'); });
    });
</script>
<div class="item-container main-content">
	<div class="row">
		<div class="well well-sm lstpage">
			<strong style="font-family: 'Lato', sans-serif;font-size:20px;">Products</strong>
			@*<div class="btn-group">
					 <a href="#" id="list" class="btn btn-default btn-sm">
						  <span class="glyphicon glyphicon-th-list">
						  </span>List
					 </a> <a href="#" id="grid" class="btn btn-default btn-sm">
						  <span class="glyphicon glyphicon-th"></span>Grid
					 </a>
				</div>*@
		</div>
		<div id="products" class="col-md-12 list-group lstpage">
			@foreach (var pro in Model)
			{
			<div class="item  col-xs-3 col-lg-3">
				<div style="border:0 !important;box-shadow:none !important;" class="thumbnail">
					@if (pro.pictures.Count > 0)
						{
						<a href="@Url.Action("Detail", "Product", new { id = @pro.GenerateSlug() })" title="@pro.Name"><img class="group list-group-image" src="@pro.pictures.FirstOrDefault().Url" alt="@pro.Name" /></a>
						}
						else
						{
						<a href="@Url.Action("Detail", "Product", new { id = @pro.GenerateSlug() })" title="@pro.Name">
							<img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
						</a>
						}
					<div class="caption">
						<a href="@Url.Action("Detail", "Product", new { id = @pro.GenerateSlug() , Area="" })" title="@pro.Name">
							<h4 class="group inner list-group-item-heading">
								@pro.Name
							</h4>
						</a>
						<p class="group inner list-group-item-text">
							@Html.Raw(pro.Description.Length > 200 ? pro.Description.Substring(0, 200) : pro.Description)
						</p>
					</div>
				</div>
			</div>
			}
		</div>
	</div>
</div>

