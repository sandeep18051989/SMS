@model SMS.Models.ClassRoomDivisionModel
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body table-responsive">
            <table class="table table-bordered custom-table" style="width: 100% !important;" cellpadding="0" cellspacing="0" id="newspictures-grid">
                <thead class="mdb-color lighten-5">
                    <tr>
                        <th>&nbsp;</th>
                        <th>Name</th>
                        <th>Fathers Name</th>
                        <th>Admission Date</th>
                        <th>Date Of Birth</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <script type="text/javascript">
                $(document).ready(function () {
                    // Initiallize Datatable
                    $('#newspictures-grid').DataTable({
                        "paging": false,
                        "bLengthChange": false, //thought this line could hide the LengthMenu
                        "bInfo": false,
                        "processing": true, // for show progress bar
                        "serverSide": true, // for process server side
                        "filter": false, // this is for disable filter (search box)
                        "orderMulti": true, // for disable multiple column at once
                        "ajax": {
                            "url": "/Admin/ClassRoomDivision/LoadStudentGrid/@(Model.Id)",
                            "type": "POST",
                            "datatype": "json"
                        },
                        "aaSorting": [],
                        "columns": [
                            {
                                "data": "",
                                "title": "",
                                "orderable": false,
                                "className": 'text-center',
                                "render": function (data, type, row) {
                                    if (type === "display") {
                                        return '<div class="thumb"><img src="' + row.PictureSrc + '" alt="" class="float-left"></div>';
                                    }
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "FName",
                                "title": "Name",
                                "orderable": false,
                                "className": 'text-center',
                                "render": function (data, type, row) {
                                    if (type === "display") {
                                        var dateTemplate = row.FName + ((row.MName != null && row.MName !== "") ? (" " + row.MName) : " ") + ((row.LName != null && row.LName !== "") ? (" " + row.LName) : "");
                                        return dateTemplate;
                                    }
                                    return data;
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "FatherFName",
                                "title": "Fathers Name",
                                "orderable": false,
                                "className": 'text-center',
                                "render": function (data, type, row) {
                                    if (type === "display") {
                                        var dateTemplate = row.FatherFName + ((row.FatherLName != null && row.FatherLName !== "") ? (" " + row.FatherLName) : "");
                                        return dateTemplate;
                                    }
                                    return data;
                                },
                                "defaultContent": ""
                            },
                            {
                                "data": "AdmissionDate", "title": "Admission Date", "name": "Admission Date", "autoWidth": true, "defaultContent": "", "className": "text-center"
                            },
                            {
                                "data": "DateOfBirth", "title": "Date Of Birth", "name": "Date Of Birth", "autoWidth": true, "defaultContent": "", "className": "text-center"
                            }
                        ],
                        "select": {
                            "style": 'os',
                            "selector": 'td:first-child'
                        }
                    });
                });
            </script>
        </div>
    </div>
</div>