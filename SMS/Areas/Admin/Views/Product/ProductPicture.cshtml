@model SMS.Models.EventPictureModel
<tr id="@Model.PictureId">
	<th scope="row">
		<img src="@Model.Picture.Url" alt="" class="img-fluid z-depth-0">
	</th>
	<td>
		<button type="button" class="btn btn-sm btn-primary waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="" id="removepic_@(Model.PictureId)" data-original-title="Remove item">X</button>
	</td>
	<td>
		@Html.EditorFor(model => model.PicStartDate, "DateRange.cshtml")
		@Html.LabelFor(model => model.PicStartDate, htmlAttributes: new { @class = "control-label" })
		@Html.ValidationMessageFor(model => model.PicStartDate, "", new { @class = "text-danger" })
	</td>
	<td>
		@Html.EditorFor(model => model.PicEndDate, "DateRange.cshtml")
		@Html.LabelFor(model => model.PicEndDate, htmlAttributes: new { @class = "control-label" })
		@Html.ValidationMessageFor(model => model.PicEndDate, "", new { @class = "text-danger" })
	</td>
	<td>
		@Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control", @type = "number", @tabindex = "4", @maxlength = "20", @onkeypress = "return checkNumber(event);" } })
		@Html.LabelFor(model => model.DisplayOrder, "Display Order", htmlAttributes: new { @class = "control-label" })
		@Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
	</td>
</tr>