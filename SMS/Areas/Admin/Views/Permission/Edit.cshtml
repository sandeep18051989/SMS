@model SMS.Areas.Admin.Models.CreatePermissionModel
@using EF.Services;
@{
	ViewBag.Title="Edit Permission";
	Layout="~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-md-12 mr-4">
		<section class="edit-form">
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				@Html.HiddenFor(model => model.Id)
				<div class="row">
					<div id="admin-page-header" class="col-xs-12 col-md-12">
						<h3 class="section-heading mr-auto">EDIT PERMISSION</h3>
						<input type="submit" value="Save" class="btn btn-primary mr-auto" />&nbsp;<span id="permission-delete" class="btn btn-danger"><i class="fa fa-trash-o"></i> Delete</span>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						@Html.ValidationSummary(true, "", new { @class="text-danger" })
					</div>
				</div>
				<hr />
				<div class="row text-left">
					<div class="col-xs-12 col-md-4 mb-4">
						<div class="md-form">
							<i class="fa fa-play-circle-o prefix"></i>
							@Html.EditorFor(model => model.Name, new { htmlAttributes=new { @class="form-control", @tabindex="1", @maxlength="50" } })
							@Html.LabelFor(model => model.Name, htmlAttributes: new { @class="control-label" })
							@Html.ValidationMessageFor(model => model.Name, "", new { @class="text-danger" })
						</div>
					</div>
				</div>
				<div class="row text-left">
					<div class="col-xs-12 col-md-4 mb-4">
						<div class="md-form">
							<i class="fa fa-tag prefix"></i>
							@Html.EditorFor(model => model.Category, new { htmlAttributes=new { @class="form-control", @tabindex="2", @maxlength="50" } })
							@Html.LabelFor(model => model.Category, htmlAttributes: new { @class="control-label" })
							@Html.ValidationMessageFor(model => model.Category, "", new { @class="text-danger" })
						</div>
					</div>
				</div>
			}
			@Html.DeleteConfirmation("permission-delete")
		</section>
	</div>
</div>
