@model DateTime?
@Html.TextBoxFor(model => model, new { @class = "form-control text-box single-line" })
<script type="text/javascript">
	$(function () {
		$('#@Html.IdFor(model => model)').pickadate();
		var $input = $('#@Html.IdFor(model => model)').pickadate();
		var picker = $input.pickadate('picker');
		picker.on({
		close: function () {
			$(document.activeElement).blur();
		},
		})
	});
</script>