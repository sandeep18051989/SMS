@model EF.Services.ConfirmationForDeleteModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="@(Model.WindowId)-title">Are You Sure</h4>
        </div>
        @using (Html.BeginForm(Model.ActionName, Model.ControllerName, new { id = Model.Id }))
        {
            <div class="form-horizontal">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    Do You Want To Delete This Item ?
                </div>
                <div class="modal-footer">
                    <span class="btn btn-default" data-dismiss="modal">No</span>
                    <button type="submit" class="btn btn-primary pull-right">
                        Delete
                    </button>
                </div>
            </div>
        }
    </div>
</div>
