@model SMS.Models.BlogsModel
@{
    ViewBag.Title = (!String.IsNullOrEmpty(Model.Name) ? Model.Name : "Blog Detail");
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<div class="item-container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h3 class="page-header">@(!String.IsNullOrEmpty(Model.Name) ? Model.Name : "Blog Detail")</h3>
        </div>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i>&nbsp;&nbsp;Comment/Reply Added Successfully.</div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="product">
                <center class="thumbnail col-xs-12 col-sm-4 col-md-4 col-sm-offset-4 col-md-offset-4">
                    @if (Model.pictures != null && Model.pictures.Count > 0)
                    {
                        <img id="item-display" src="@Model.pictures.FirstOrDefault().Url.Replace("~/","../../")" alt="" />
                    }
                    else
                    {
                        <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                    }
                </center>
            </div>
            <br />
            <div style="padding:5px;border:2px solid #3AA176;border-radius:4px;" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div style="font-family: 'Lato', sans-serif;font-size:24px;" class="product-title">@Model.Name</div>
                <br />
                @Html.Raw(Model.BlogHtml)
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 product-info">
            <div class="pull-left" style="display:inline-block;">
                <h3 style="font-family: 'Lato', sans-serif;">Comments</h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @Html.Action("GetComments", "Comment", new { id = Model.Id, type = "Blog" })
            @Html.Partial("~/Views/Comment/PostComment.cshtml", Model.postCommentModel)
            <hr />
        </div>
    </div>
</div>
