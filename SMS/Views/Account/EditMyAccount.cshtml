@model SMS.Models.UserInfoModel
@using EF.Services;
@{
	ViewBag.Title = Model.FirstName + " " + Model.LastName + " Account";
	Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<div class="item-container main-content">
	<div class="row">
		<div class="col-md-12 register-form">
			@Html.ValidationSummary(false)
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				@Html.HiddenFor(model => model.Id)
				<div class="form-horizontal">
					<div id="page-header" class="col-xs-12 col-md-12">
						<h3 class="admin-section-header pull-left" style="text-align:left;font-weight:bold;">My Account</h3>
						<div class="input-group pull-right">
							<input type="submit" value="Save" class="btn btn-primary" />
						</div>
					</div>
					<div class="clearfix"></div>
					<hr />
					<div class="form-group">
						<label class="control-label col-md-2">First Name</label>
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @tabindex = "1", @maxlength = "100", @Placeholder = "First Name" } })
							@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					@*<div class="form-group">
							<label class="control-label col-md-4">Brief Summary</label>
							<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
								<div class="checkbox">
									@Html.EditorFor(model => model.BriefIntroduction, "HtmlEditor.cshtml")
									@Html.ValidationMessageFor(model => model.BriefIntroduction, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>*@
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @tabindex = "3", @maxlength = "100", @Placeholder = "Last Name" } })
							@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @tabindex = "4", @maxlength = "200", @Placeholder = "Email Address" } })
							@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control", @tabindex = "5", @maxlength = "100", @Placeholder = "Street" } })
							@Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.AddressLine1, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.AddressLine1, new { htmlAttributes = new { @class = "form-control", @tabindex = "6", @maxlength = "200", @Placeholder = "Address Line 1" } })
							@Html.ValidationMessageFor(model => model.AddressLine1, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.AddressLine2, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.AddressLine2, new { htmlAttributes = new { @class = "form-control", @tabindex = "7", @maxlength = "200", @Placeholder = "Address Line 2" } })
							@Html.ValidationMessageFor(model => model.AddressLine2, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.Hobbies, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.Hobbies, new { htmlAttributes = new { @class = "form-control", @tabindex = "8", @maxlength = "500", @Placeholder = "Hobbies" } })
							@Html.ValidationMessageFor(model => model.Hobbies, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @tabindex = "9", @maxlength = "10", @Placeholder = "Phone" } })
							@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.ProfilePictureId, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.ProfilePictureId, "Picture")
							@Html.ValidationMessageFor(model => model.ProfilePictureId, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="form-group">
						@Html.LabelFor(model => model.CoverPictureId, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-xs-12 col-sm-8 col-md-4 col-lg-4">
							@Html.EditorFor(model => model.CoverPictureId, "Picture")
							@Html.ValidationMessageFor(model => model.CoverPictureId, "", new { @class = "text-danger" })
						</div>
					</div>

				</div>
				<script type="text/javascript">
					$(document).ready(function () {
						$(document).on("change", "#Email", function () {
							if ($(this).val() != null && $(this).val() != "") {
								var userinput = $(this).val();
								if (!isValidEmailAddress(userinput)) { alert('Please enter valid email address.'); $(this).val(''); }
							}
						});
					});
				</script>
			}
		</div>
	</div>
</div>