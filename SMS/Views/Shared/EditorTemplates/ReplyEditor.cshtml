@model String
@Html.TextAreaFor(model => model, new { @placeholder = "Write your reply here" })
<script type="text/javascript">
    tinyMCE.init({
        mode: "textareas",
        theme: "modern",
        plugins: ["placeholder","code"]
    });
    tinymce.init({
        selector: "#tinymce-custom-placeholder",
        plugins: ["placeholder", "code"],
        placeholder: 'Write your reply here',
    });
    tinymce.init({
        selector: "#tinymce-custom-style",
        plugins: ["placeholder"],
        placeholder_tag: 'div',
        placeholder_attrs: { style: { position: 'absolute', top: '5px', left: 0, color: '#FF0000', padding: '1%', width: '98%', overflow: 'hidden', 'white-space': 'pre-wrap' } },
    });
</script>