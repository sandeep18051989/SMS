@model SMS.Models.ProductModel
@{
	ViewBag.Title = "Product Detail";
	Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<div class="item-container main-content">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<h3 class="page-header">@Model.Name</h3>
		</div>
	</div>
	@if (TempData["Success"] != null)
	{
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i>&nbsp;&nbsp;Comment/Reply Added Successfully.</div>
			</div>
		</div>
	}
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12">
			<div class="product">
				<center class="thumbnail col-xs-12 col-sm-4 col-md-4 col-sm-offset-4 col-md-offset-4">
					@if (Model.pictures != null && Model.pictures.Count > 0)
					{
						<img id="item-display" src="@Model.pictures.FirstOrDefault().Url.Replace("~/","../../")" alt="" />
					}
					else
					{
						<img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
					}
				</center>
			</div>
			<br />
			<div class="panel panel-default">
				<div class="panel-body">
					@Html.Raw(Model.Description)
				</div>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 product-file-section">
			<div class="panel panel-info">
				<div class="panel-heading"><h3 class="panel-h3" >DOCUMENTS</h3></div>
				<div class="panel-body">
					@if (Model.files != null && Model.files.Count > 0)
					{
						foreach (var fle in Model.files)
						{
							<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
								<a style="text-decoration:none;text-align:center;" href="@fle.Src" class="thumbnail">
									<img style="max-width:100px;" src='../../Content/images/file.png' />
									<p style="font-size:16px;font-weight:bold;" class="file-upload-date">Upoaded On - @fle.Date.Date.ToShortDateString()</p>
								</a>
							</div>
						}
					}
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 product-info">
			<div class="pull-left" style="display:inline-block;">
				<h3 style="font-family: 'Lato', sans-serif;">YOUR COMMENTS</h3>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			@Html.Action("GetComments", "Comment", new { id = Model.ProductId, type = "Product" })
			@Html.Partial("~/Views/Comment/PostComment.cshtml", Model.postCommentModel)
			<hr />
		</div>
	</div>
</div>
