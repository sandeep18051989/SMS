@model ArteryLabCms.Models.InstallDatabaseModel
@{
    ViewBag.Title = "CMS Installation";
    Layout = "~/Views/Shared/_Root.cshtml";
}
<div style="margin-left:15px;margin-right:15px;" class="row">
    <div class="page-header">
        <h2 class="page-header SJheading2 text-center">One Click Installation Page</h2>
        <p class="text-info text-center"><i class="icon-cog"></i> Default database connection settings not implemented, please provide connection settings manually here.</p>
    </div>
    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-sm-5 col-md-5">
                <div class="form-group">
                    @Html.EditorFor(model => model.Datasource, new { htmlAttributes = new { @class = "input-large form-control", placeholder = Html.DisplayNameFor(model => model.Datasource) } })
                    @Html.ValidationMessageFor(model => model.Datasource, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-4 col-md-4">
                <div class="form-group">
                    @Html.EditorFor(model => model.Database, new { htmlAttributes = new { @class = "input-large form-control", @placeholder = Html.DisplayNameFor(model => model.Database) } })
                    @Html.ValidationMessageFor(model => model.Database, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-4 col-md-4">
                <div class="form-group">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "input-large form-control", @placeholder = Html.DisplayNameFor(model => model.Username) } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-4 col-md-4">
                <div class="form-group">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-large form-control", @placeholder = Html.DisplayNameFor(model => model.Password) } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-5 col-md-5">
                <div class="form-group">
                    @Html.EditorFor(model => model.AdminUsername, new { htmlAttributes = new { @class = "input-large form-control", @placeholder = "Admin Username" } })
                    @Html.ValidationMessageFor(model => model.AdminUsername, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-5 col-md-5">
                <div class="form-group">
                    @Html.EditorFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "input-large form-control", @placeholder = Html.DisplayNameFor(model => model.AdminPassword) } })
                    @Html.ValidationMessageFor(model => model.AdminPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-6 col-md-6">
                <div class="form-group">
                    <input type="file" name="LogoUrl" id="LogoUrl" value="" /><br />
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="input-group text-center">
                <input type="submit" value="Install Database" class="btn btn-primary" />
            </div>
        }
    </div>
    <div class="clearfix"></div>
</div>